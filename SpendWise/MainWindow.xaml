<Window x:Class="SpendWise.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="SpendWise"
        Height="480"
        Width="820"
        Background="#F5F7FA"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Cursor" Value="Hand"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            CornerRadius="6">
                            <ContentPresenter
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>


    <Grid Margin="15">
        <Border x:Name="MainBorder"
                Background="AliceBlue"
                CornerRadius="10"
                Padding="15">

            <Grid>
                <!-- MAIN ROWS -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- TITLE -->
                <TextBlock Grid.Row="0"
                           Text="SpendWise – Personal Finance Tracker"
                           FontSize="22"
                           FontWeight="Bold"
                           HorizontalAlignment="Left"
                           Margin="0,-5,0,10" Width="810"/>

                <TextBlock Text="🕒"
                           FontSize="15"
                           Cursor="Hand"
                           HorizontalAlignment="Right"
                           Margin="0,29,10,332"
                           ToolTip="History"
                           MouseLeftButtonUp="OpenHistory_Click" Grid.RowSpan="3"/>


                <!-- BALANCE ROW -->
                <TextBlock
                           x:Name="TotalText"
                           Text="Balance: ₹0"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="#16A34A"
                           HorizontalAlignment="Right"
                           Margin="0,30,65,16" Grid.RowSpan="2"/>

                <!-- CONTENT -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="260"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- LEFT : INPUTS -->
                    <StackPanel Grid.Column="0" Margin="0,0,15,0">

                        <TextBlock Text="Add Transaction"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Amount"/>
                        <TextBox x:Name="AmountBox" 
                                 Height="30" Margin="0,0,0,8"/>

                        <TextBlock Text="Description"/>
                        <TextBox x:Name="DescBox"
                                 Margin="0,0,0,8"
                                 Padding="6"/>

                        <TextBlock Text="Type"/>
                        <ComboBox x:Name="TypeBox" Margin="0,0,0,12">
                            <ComboBoxItem Content="Income"/>
                            <ComboBoxItem Content="Expense"/>
                        </ComboBox>

                        <TextBlock Text="Currency"/>

                        <ComboBox x:Name="CurrencyBox"
                                  Margin="0,0,0,12">
                            <ComboBoxItem Content="INR (₹)" IsSelected="True"/>
                            <ComboBoxItem Content="USD ($)"/>
                            <ComboBoxItem Content="EUR (€)"/>
                        </ComboBox>


                        <Button Content="Add Transaction"
                                Height="36"
                                Background="#2563EB"
                                Foreground="White"
                                Click="AddTransaction_Click"/>


                    </StackPanel>

                    <!-- RIGHT : LIST -->
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <DockPanel Grid.Row="0" Margin="0,0,0,6">
                            <ComboBox x:Name="FilterBox"
                                      Width="120"
                                      DockPanel.Dock="Left"
                                      SelectionChanged="FilterBox_SelectionChanged">
                                <ComboBoxItem Content="All" IsSelected="True"/>
                                <ComboBoxItem Content="Income"/>
                                <ComboBoxItem Content="Expense"/>
                            </ComboBox>


                            <TextBlock x:Name="ListTotalText"
                                       DockPanel.Dock="Right"
                                       Margin="12,0,0,0"
                                       FontWeight="Bold"/>
                        </DockPanel>

                        <!-- LIST -->
                        <ListBox x:Name="TransactionList"
                                 Grid.Row="1"
                                 Padding="10"
                                 Background="#FAFAFA"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"/>

                        <!-- BOTTOM RIGHT ACTIONS -->
                        <StackPanel Grid.Row="2"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    Margin="0,10,0,0">

                            <Button Content="Delete Selected"
                                    Width="150"
                                    Height="35"
                                    Background="#D32F2F"
                                    Foreground="White"
                                    Click="DeleteExpense_Click"/>

                            <Button Content="Clear All"
                                    Width="100"
                                    Height="35"
                                    Margin="8,0,0,0"
                                    Background="#9CA3AF"
                                    Foreground="Black"
                                    Click="ClearAll_Click"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>
        </Border>


    </Grid>
</Window>
