<Window x:Class="SpendWise.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpendWise"
        mc:Ignorable="d"
        Title="HistoryWindow" Height="450" Width="800">
   
        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
          <StackPanel Orientation="Horizontal" Grid.Row="0">
               <TextBlock Text="History"
                       FontSize="18"
                       FontWeight="Bold"/>

                <ComboBox x:Name="MonthBox"
                      Width="120"
                      Margin="20,0,0,0"
                      SelectionChanged="MonthChanged"/>
          </StackPanel>
            
          <ScrollViewer Grid.Row="1"
                        VerticalScrollBarVisibility="Auto">
             <StackPanel Grid.Row="1">

                <TextBlock Text="Income"
                          FontSize="14"
                          FontWeight="Bold"
                          Foreground="Green"
                          Margin="0,5"/>

                <ListBox x:Name="IncomeList"
                     Height="180"
                     Background="#ECFDF5"
                     Margin="0,6,0,4"/>

                <TextBlock x:Name="IncomeTotalText"
                         FontWeight="Bold"
                         Margin="0,4,0,10"/>
            

               <TextBlock Text="Expenses"
                         FontSize="14"
                         FontWeight="Bold"
                         Foreground="Red"
                         Margin="0,5"/>
               <ListBox x:Name="ExpenseList"
                     Height="180"
                     Background="#FEF2F2"
                     Margin="0,6,0,4"/>

            
               <TextBlock x:Name="ExpenseTotalText"
                         FontWeight="Bold"
                         Margin="0,4,0,10"/>

               <TextBlock x:Name="NetTotalText"
                         FontSize="14"
                         FontWeight="Bold"
                         Margin="0,8,0,0"/>
            </StackPanel>
         </ScrollViewer>

          <!-- FOOTER -->
         <Grid Grid.Row="2" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1"
                    Content="Delete Selected"
                    Width="150"
                    Height="35"
                    Margin="0,0,12,0"
                    Background="#D32F2F"
                    Foreground="White"
                    Click="DeleteSelected_Click"/>

            <Button Grid.Column="2"
                    Content="Clear Month"
                    Width="120"
                    Height="35"
                    Margin="0,0,12,0"
                    Background="#9CA3AF"
                    Foreground="Black"
                    Click="ClearMonth_Click"/>

            <Button Grid.Column="3"
                    Content="Close"
                    Width="80"
                    Height="35"
                    Background="#9CA3AF"
                    Click="Close_Click"/>
         </Grid>

    </Grid>
</Window>
